/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    Not (in=a, out=not-a);
    Not (in=b, out=not-b);
    And (a=a, b=not-b, out=a-and-not-b);
    And (a=not-a, b=b, out=not-a-and-b);
    Or (a=a-and-not-b, b=not-a-and-b, out=out);
}
